{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "#/*": ["src/*"],
      "#js/*": ["src/js/*"],
      "#css/*": ["src/css/*"],
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "test"
  ],
  "awesomeTypescriptLoaderOptions": {
    "ignoreDiagnostics": [2339, 2322, 7027, 6133, 2564, 2345, 2531, 2351],
    "useBabel": true,
    "useCache": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
